<search-wrapper class="flex justify-between w-full gap-x-sm">
  <label for="text-input" class="sr-only">Search for someone</label>
  <input
    autocomplete="off"
    id="text-input"
    name="text-input"
    placeholder="Search for someone..."
    type="text"
    class="bg-primary-lightGrey px-sm py-xs rounded-lg grow"
  />
  <button
    id="submit"
    class="rounded-lg px-sm py-xs bg-primary-lightGrey text-primary-black"
    >Search</button
  >
</search-wrapper>

<script>
  import { handleInputSearchButton } from "../../utils/handleInputSearch";

  class SearchWrapper extends HTMLElement {
    constructor() {
      super();
      const textInputString = "#text-input";
      const textInput: HTMLTextAreaElement =
        this.querySelector(textInputString)!;
      const submitButton = this.querySelector("#submit");

      textInput.addEventListener("keydown", function (e) {
        if (e.key == "Enter") {
          handleInputSearchButton((e.target as HTMLTextAreaElement).value);
        }
      });

      submitButton?.addEventListener("click", () => {
        handleInputSearchButton(
          (this.querySelector(textInputString) as HTMLTextAreaElement)?.value
        );
      });
    }
  }

  customElements.define("search-wrapper", SearchWrapper);
</script>
