---
import Input from "../Input.astro";
import DisplayPeople from "./DisplayPeople";

const { people } = Astro.props;
---

<!-- You can do maps in Astro!!!! -->
<div class="flex flex-col py-12 gap-12 w-full">
  <div class="flex justify-between w-full gap-6">
    <Input />
    <button class="rounded-lg px-4 py-2 bg-primary-lightGrey text-primary-grey"
      >Search</button
    >
  </div>
  <div class="flex flex-wrap">
    <DisplayPeople client:load people={people} />
  </div>
</div>
