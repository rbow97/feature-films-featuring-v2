---
import Input from "../Input.astro";
import Card from "./Card.astro";

const { people } = Astro.props;
---

<div class="flex flex-col px-4 gap-12">
  <Input  />
  <div class="flex flex-wrap">
    {
      people.map((person: any, i: number) => {
        if (i < 10)
          return (
        // TODO:
            // On hover, image expands to take up whole space, some kind of tooltip appears with more info, can click whole image to tag
            <div class="w-1/2 lg:w-1/3 pr-4 pb-4 relative group">
              <Card
                profilePath={person.profile_path}
                name={person.name}
                profession={person.known_for_department}
                workedOn={person.known_for}
              />
            </div>
          );
      })
    }
  </div>
</div>

<style>

  async function handleChange(input: string) {
    e.preventDefault();

    const searchedPeople = await getSearchedPeople();
  }
</style>
