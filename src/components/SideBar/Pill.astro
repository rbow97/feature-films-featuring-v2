---
interface Props {
  href?: any;
}

const { href } = Astro.props;
---

<a
  class="py-0.5 px-1 md:py-1 md:px-2 border-2 border-primary-darkGrey rounded-[40px] text-[14px] md:text-[14px] [&>span]:text-primary-darkGrey md:hover:border-primary-blue md:hover:bg-primary-blue md:[&>span]:hover:text-white duration-primary ease-primary overflow-hidden relative group block w-fit font-spaceGrotesk"
  href={href || "/"}
  ><span
    class="flex duration-primary ease-primary md:group-hover:-translate-y-[calc(100%_+_10px)]"
    ><slot /></span
  >
  <span
    class="absolute duration-primary ease-primary translate-y-full md:group-hover:-translate-y-full flex"
    aria-hidden><slot /></span
  ></a
>
